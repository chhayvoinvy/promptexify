# App
# ------------------------------------------
NODE_ENV=
NEXT_PUBLIC_BASE_URL=

# Supabase
# ------------------------------------------
DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Client
# ------------------------------------------
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# AWS S3 Configuration
# ------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-1
AWS_S3_BUCKET_NAME=
AWS_CLOUDFRONT_URL=

# Stripe Configuration
# ------------------------------------------
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_STRIPE_PREMIUM_MONTHLY_PRICE_ID=
NEXT_PUBLIC_STRIPE_PREMIUM_YEARLY_PRICE_ID=

# Security Configuration
# ------------------------------------------
ENABLE_AUDIT_LOGGING=true
CSP_REPORT_URI=https://your-domain.com/api/csp-report
SECURITY_MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook

# Development CSP Debugging (ONLY for development)
# Secure cookie
# Set to "true" to completely disable CSP in development for debugging
# ------------------------------------------
COOKIE_SECURE=true
DISABLE_CSP_DEV=true